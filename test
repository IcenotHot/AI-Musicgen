SELECT Orders.OrderID, Customers.CustomerName, Orders.OrderDate
FROM Orders
INNER JOIN Customers ON Orders.CustomerID = Customers.CustomerID;

SELECT likes.audio_id ,likes.user_id ,likes.type
FROM `likes` 

SELECT 
    u.id AS user_id,
    u.username,
    COUNT(CASE WHEN l.type = 'like' THEN 1 END) AS total_likes,
    COUNT(CASE WHEN l.type = 'dislike' THEN 1 END) AS total_dislikes
FROM user u
JOIN upload up ON u.id = up.user_id   
LEFT JOIN likes l ON u.id = l.user_id
GROUP BY u.id, u.username;